<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <b:Panel>
        <b:PanelHeader>
            <b:Heading size="H3" ui:field="fieldHeading"/>
        </b:PanelHeader>
        <b:PanelBody>
            <g:HTML ui:field="fieldBody"/>
        </b:PanelBody>
        <b:PanelFooter>
            <g:Anchor ui:field="fieldFooter"/>
        </b:PanelFooter>
    </b:Panel>
</ui:UiBinder>